<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="2pt"
        android:layout_marginRight="2pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="4pt"
                android:gravity="center"
                android:layout_weight="1"
                android:text="First Name: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="4pt"
                android:gravity="center"
                android:text="Last Name: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="4pt"
                android:gravity="center"
                android:text="CWID: "/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/p_first_name_id"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="4pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/p_last_name_id"
                android:gravity="center"
                android:textSize="4pt"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/cwid_id"
                android:gravity="center"
                android:textSize="4pt"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/course_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="4pt"
        android:gravity="center">
    </Button>
    <TextView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="6pt"
        android:text="Course Enrollment:"
        android:layout_marginTop="2pt">
    </TextView>
    <ListView
        android:id="@+id/course_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
    <LinearLayout
        android:id="@+id/edit_enrollment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="4pt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course ID"
                android:gravity="center"
                android:textSize="4pt">
            </TextView>
            <EditText
                android:id="@+id/add_course_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="4pt">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:gravity="center"
                android:textSize="4pt">
            </TextView>
            <EditText
                android:id="@+id/add_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="4pt">
            </EditText>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>